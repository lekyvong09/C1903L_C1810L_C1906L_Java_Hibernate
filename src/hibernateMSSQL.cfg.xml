<!DOCTYPE hibernate-configuration PUBLIC
         "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- JDBC db connection settings -->
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="connection.url">jdbc:sqlserver://localhost:1433;database=hb_student_tracker;encrypt=false;trustServerCertificate=false;loginTimeout=30;</property>
		<property name="connection.username">sa</property>
		<property name="connection.password">ab123456..</property>
		
		<property name="connection.pool_size">1</property>
		
		<property name="dialect">org.hibernate.dialect.SQLServer2012Dialect</property>
		<property name="show_sql">true</property>
		
		<property name="current_session_context_class">thread</property>
		
	</session-factory>
</hibernate-configuration>